{% from "macros/articleCard.njk" import articleCard %}

<ul class="list">
  {% for article in pagination.items %}
    <li class="list__item list__item--large">
      <div class="card card--article h-entry">
        {{ articleCard(article.data.title, article.url, article.data.lang, article.date, article.data.tags, article.templateContent ) }}
      </div>
    </li>
  {% endfor %}
</ul>
