---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Nicolas Hoizey - Articles</title>
  <link href="{{ pkg.homepage }}/feeds/articles.xml" rel="self"/>
  <link href="{{ pkg.homepage }}/?utm_medium=feed&amp;utm_source=Atom%20feed&amp;utm_campaign=feed"/>
  <link rel="hub" href="http://pubsubhubbub.superfeedr.com/" />
  <updated>{{ build.timestamp | attributeDate }}</updated>
  <id>{{ pkg.homepage }}/articles/</id>
  <author>
    <name>{{ pkg.author.name }}</name>
    <email>{{ pkg.author.email }}</email>
  </author>

  {% assign articles_number = 0 %}
  {% for post in site.posts %}
    {% if articles_number < 20 %}
      {% unless post.categories contains 'links' %}
        <entry>
          <title>{{ post.title }}</title>
          <link href="{{ pkg.homepage }}{{ post.url }}?utm_medium=feed&amp;utm_source=Atom%20feed&amp;utm_campaign=feed"/>
          <updated>{{ post.date | attributeDate }}</updated>
          <id>{{ pkg.homepage }}{{ post.id }}</id>
          <content type="html">{{ post.content | xml_escape }}</content>
        </entry>
        {% assign articles_number = articles_number | plus: 1 %}
      {% endunless %}
    {% endif %}
  {% endfor %}

</feed>
