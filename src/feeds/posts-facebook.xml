---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Nicolas Hoizey's articles</title>
  <link href="{{ pkg.homepage }}/feeds/posts-facebook.xml" rel="self"  type="application/rss+xml" />
  <link href="{{ pkg.homepage }}/?utm_medium=social&amp;utm_source=Facebook&amp;utm_campaign=feed" />
  <updated>{{ build.timestamp | attributeDate }}</updated>
  <id>{{ pkg.homepage }}/</id>
  <author>
    <name>{{ pkg.author.name }}</name>
    <email>{{ pkg.author.email }}</email>
  </author>
  {% for post in site.posts limit:20 %}
  <entry>
    <title>{{ post.title }}</title>
    <content type="html">{{ post.title | xml_escape }}

{{ post.excerpt | strip_footnotes | striptags | xml_escape }}

-> {{ pkg.homepage }}{{ post.url }}?utm_medium=social&amp;utm_source=Facebook&amp;utm_campaign=feed
    </content>
    <id>{{ pkg.homepage }}{{ post.id }}</id>
    <link href="{{ pkg.homepage }}{{ post.url }}?utm_medium=social&amp;utm_source=Facebook&amp;utm_campaign=feed"/>
    <updated>{{ post.date | attributeDate }}</updated>
  </entry>
  {% endfor %}
</feed>
