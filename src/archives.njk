---
layout: default
title: Archives
---

{% if build.env == 'production' %}
  {% set css %}
  {% include_raw config.dir.dist + "/css/" + hashes_css['instantsearch.css'] %}
  {% endset %}
  <style>
    {{css | safe}}
  </style>
{% else %}
  <link rel="stylesheet" href="/css/instantsearch.css" />
{% endif %}

<div class="instant-search">
  <div id="searchbox"></div>
  <div id="clear-refinements"></div>
  <div class="refinements">
    <div id="types-list"></div>
    <div id="langs-list"></div>
    <div id="dates-menu"></div>
    <div id="tags-list"></div>
  </div>
  <div id="stats"></div>
  <div id="powered-by"></div>
  <div id="hits">

    {% from "macros/articleCard.njk" import articleCard %}
    {% from "macros/linkCard.njk" import linkCard %}
    {% from "macros/noteCard.njk" import noteCard %}
    <div class="cards-list">
      {% set count = 0 %}
      {% for item in collections.archives | limit(10) %}
        {% if count < 10 %}
          {% if item.data.layout == 'article' %}
            {{ articleCard(item) }}
            {% set count = count + 1 %}
          {% endif %}
          {% if item.data.layout == 'link' %}
            {{ linkCard(item) }}
            {% set count = count + 1 %}
          {% endif %}
          {% if item.data.layout == 'note' %}
            {{ noteCard(item) }}
            {% set count = count + 1 %}
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>

  </div>
  <div id="pagination"></div>
</div>

