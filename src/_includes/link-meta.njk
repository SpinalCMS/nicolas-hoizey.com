<footer>
  <ul class="card__meta">
    <li class="card__meta__item card__author">
      Published by <a class="p-author h-card" rel="me" href="https://nicolas-hoizey.com">Nicolas Hoizey</a>
    </li>
    <li class="date card__meta__item card__date">
      <svg class="icon"><use xlink:href="#symbol-date" /></svg>
      <time class="dt-published" datetime="{{ include.page.date | date: "%Y-%m-%d %H:%M:%S" }}">
        {{ include.page.date | date("%B") }} {{ include.page.date | ordinal }}, {{ include.page.date | date("%Y") }}
      </time>
    </li>
    <li class="tags card__meta__item card__tags">
      <svg class="icon"><use xlink:href="#symbol-tags" /></svg>&nbsp;{{ include.page | tags | tags_microformat }}
    </li>
    {% capture webmention_count_value %}{% webmention_count include.page.url %}
    {% endcapture %}
    {% assign webmention_count_int = webmention_count_value | strip_html | plus: 0 %}
    {% if webmention_count_int > 0 %}
      <li class="webmentions card__meta__item card__webmentionscount">
        <svg class="icon"><use xlink:href="#symbol-webmentions" /></svg>
        <a href="{{ include.page.url }}#webmentions">{{ webmention_count_int }} webmention{% if webmention_count_int > 1 %}s{% endif %}
        </a>
      </li>
    {% endif %}
  </ul>
</footer>
