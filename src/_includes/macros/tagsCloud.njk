{% macro tagsCloud(tags) %}

{% set minSize = 0.9 %}
{% set maxSize = 1.8 %}
{% set minWeight = 300 %}
{% set maxWeight = 900 %}

<style>
.tagscloud__tags {
  list-style: none;
  padding: 0;

.tagscloud__tags li {
  display: inline-block;
  margin: 0;
}

.tagscloud__tags a:link, .tagscloud__tags a:visited {
  display: inline-block;
  margin: 0.2em 0.3em;
  padding: 0.1em 0.3em;

  text-decoration: none;
  white-space: nowrap;

  background-color: $color-primary-lighter-2;
  color: $color-white;
  border-radius: 0.2em;
}
</style>

<ol class="tagscloud__tags">
{% for tag in tags %}
  {% set tagUrl %}/tags/{{ tag.tag | slugify }}/{% endset %}
  {% set fontSize = (maxSize - minSize) * tag.factor + minSize %}
  {% set fontWeight = (maxWeight - minWeight) * tag.factor + minWeight %}
  <li>
    <a href="{{ tagUrl }}"
      class="tag{{ tag.step }}"
      aria-label="{{ tag.number }} content{% if tag.number > 1 %}s{% endif %} with tag {{ tag.tag }}"
      style="
        font-size: {{ fontSize | round(2) }}em;
        font-weight: {{ fontWeight | round(0) }}"
      rel="tag">{{ tag.tag }}</a>
  </li>
{% endfor %}
</ol>

{% endmacro %}
