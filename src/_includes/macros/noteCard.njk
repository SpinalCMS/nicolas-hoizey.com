{% from "macros/meta.njk" import meta %}
{% from "macros/card.njk" import card %}

{% macro noteCard(note) %}
  {% set content %}
  {{ note.templateContent | noteToHtml | absoluteImagePath(note.url) | safe }}
  {% endset %}

  {% set meta %}
  {{ meta(note, permalink=true) }}
  {% endset %}

  {{ card('note', note.data.lang, false, false, false, false, content, meta) }}
{% endmacro %}
