{% macro meta(title, url, date, tags, type, webmentions, permalink=false, comments=false) %}
  {% if type == note %}
    {% set title %}Note from {{ date | date("Do MMMM YYYY") }}{% endset %}
  {% endif %}
  <ul class="meta">
    <li class="date meta__item card__date">
      <svg class="icon"><use xlink:href="#symbol-date" /></svg>
      <time class="dt-published" datetime="{{ date | attributeDate }}">
        {{ date | date("Do") }}
        <a href="/{{ type }}/{{ date | date("YYYY") }}/{{ date | date("MM") }}/">{{ date | date("MMMM") }}</a>
        <a href="/{{ type }}/{{ date | date("YYYY") }}/">{{ date | date("YYYY") }}</a>
      </time>
    </li>
    {% set tagsSize = tags | size %}
    {% if tagsSize > 0 %}
      <li class="tags meta__item card__tags">
        <svg class="icon"><use xlink:href="#symbol-tags" /></svg>
        {% set comma = joiner(", ") %}
        {%- for tag in tags -%}
          {{ comma() }}
          <a href="/tags/{{ tag | slugify }}/" rel="tag" class="p-category">{{ tag }}</a>
        {%- endfor -%}
      </li>
    {% endif %}
    {% if type == 'articles' %}
      {# TODO: optimize with memoization? Or add number to the computed FM data? #}
      {% set theseComments = comments | getCommentsForUrl(url) %}
      {% set theseCommentsSize = theseComments | size %}
      {% if theseCommentsSize > 0 %}
        <li class="comments meta__item card__commentscount">
          <svg class="icon"><use xlink:href="#symbol-webmentions" /></svg>
          <a href="{{ url }}#comments" aria-label="{{ theseCommentsSize }} comment{% if theseCommentsSize > 1 %}s{% endif %} for &quot;{{ title }}&quot;">{{ theseCommentsSize }} comment{% if theseCommentsSize > 1 %}s{% endif %}
          </a>
        </li>
      {% endif %}
    {% endif %}
    {% set mentions = webmentions | getWebmentionsForUrl(url) %}
    {% set mentionsSize = mentions | size %}
    {% if mentionsSize > 0 %}
      <li class="webmentions meta__item card__webmentionscount">
        <svg class="icon"><use xlink:href="#symbol-webmentions" /></svg>
        <a href="{{ url }}#webmentions" aria-label="{{ mentionsSize }} webmention{% if mentionsSize > 1 %}s{% endif %} for &quot;{{ title }}&quot;">{{ mentionsSize }} webmention{% if mentionsSize > 1 %}s{% endif %}
        </a>
      </li>
    {% endif %}
    {% if permalink %}
      <li class="permalink meta__item">
        <svg class="icon"><use xlink:href="#symbol-link" /></svg>
        <a href="{{ url }}">permalink</a>
      </li>
    {% endif %}
  </ul>
{% endmacro %}

