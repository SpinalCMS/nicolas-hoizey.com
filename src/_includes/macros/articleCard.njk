{% macro articleCard(title, url, lang, date, tags, excerpt) %}

  <p class="card__title p-name">
    <a href="{{ url }}" hreflang="{{ lang }}" class="u-url">{{ title }}</a>
  </p>
  <p class="card__excerpt p-summary">{{ excerpt | strip_footnotes | striptags }}</p>

  {% from "macros/meta.njk" import meta %}
  {{ meta(url, date, tags) }}

{% endmacro %}
