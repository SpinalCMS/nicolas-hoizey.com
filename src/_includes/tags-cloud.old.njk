<ul>
  {% for tag in site_tags %}
    {% set tag_nb = site.tags[tag] | size %}
    <li class="nb{{ tag_nb }}"><a href="/tags/{{ tag | slugify }}.html">{{ tag }}<span> ({{ tag_nb }} billets)</span></a></li>
  {% endfor %}
</ul>

