{% set thumbUrl = 'https://image.thum.io/get/width/1200/crop/800/noanimate/' %}
{% set cloudinaryPrefix = 'https://res.cloudinary.com/nho/image/fetch/c_fill,f_auto,q_auto,' %}
<figure class="card__image">
  <img
    alt="screenshot of {{ include.link.title }}"
    width="300"
    height="200"
    {% if include.lazy == 'on' %}
      data-src="{{ cloudinaryPrefix }}w_300,h_200/{{ thumbUrl }}{{ include.link.link }}"
    {% else %}
      src="{{ cloudinaryPrefix }}w_300,h_200/{{ thumbUrl }}{{ include.link.link }}"
    {% endif %}
    loading="lazy"
    crossorigin="anonymous" />
</figure>
{% if include.link.authors %}
  <p class="card__source">
    {%- for author in include.link.authors -%}
      {%- if forloop.first == false -%}
        {%- if forloop.last == false -%},&ensp;{%- else -%}&ensp;and&ensp;{%- endif -%}
      {%- endif -%}
      {%- if author.twitter -%}
        <img class="u-photo" src="{{ cloudinaryPrefix }}w_48,h_48/https://avatars.io/twitter/{{ author.twitter }}/large" alt="{{ author.name }} avatar" loading="lazy" width="24" height="24"/>&ensp;
      {%- endif -%}
      {{- author.name -}}
    {%- endfor -%}
    &ensp;wrote
  </p>
{% endif %}
<p class="card__title">
  <a href="{{ include.link.url }}">{{ include.link.title }}</a>
</p>
{% include link-meta.njk page=include.link %}
