<nav class="navigation" role="navigation">
  <div class="wrap">
    <ul class="menu" role="list">
      {% for type in[
        'articles',
        'billets',
        'links',
        'notes',
        'talks'
      ] %}
        {% set url = '/' + type + '/' %}
        <li class="navigation__{{ type }}{% if page.url != false and url in page.url %} current" aria-current="page{% endif %}">
          <a href="{{ url }}">{{ type }}</a>
        </li>
      {% endfor %}
    </ul>
    <ul class="tools" role="list">
      <li class="tools__search navigation__archives{% if page.url != false and 'archives' in page.url %} current" aria-current="page{% endif %}">
        <a href="/archives/">{% icon "search", "Search" %}<span>archives</span></a>
      </li>
      <li class="tools__feeds navigation__feeds{% if page.url != false and 'feeds' in page.url %} current" aria-current="page{% endif %}">
        <a href="/feeds/">{% icon "feeds", "Feeds" %}<span>feeds</span></a>
      </li>
      <li class="tools__about navigation__about{% if page.url != false and 'about' in page.url %} current" aria-current="page{% endif %}">
        <a href="/about/"><span>about</span></a>
      </li>
    </ul>
  </div>
</nav>
