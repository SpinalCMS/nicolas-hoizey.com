---
layout: page
pagination:
  data: collections.articlesByMonth
  size: 1
  alias: month
permalink: "articles/{{ month }}/"
renderData:
  title: Articles published in {{ month | monthString }}
---

{% from "macros/articleCard.njk" import articleCard %}

<ul class="list">
  {% for article in collections.articlesByMonth[month] %}
    <li class="card h-entry">
      {{ articleCard(article.data.title, article.url, article.data.lang, article.date, article.data.tags, article.templateContent, webmentions, comments ) }}
    </li>
  {% endfor %}
</ul>

<p class="pagination">
  Pages:
  {% set separator = joiner(", ") %}
  {%- for pageEntry in pagination.pages %}
    {{ separator() }}
    {% if page.url == pagination.hrefs[ loop.index0 ] %}
      <strong>{{ pageEntry }}</strong>
    {% else %}
      <a href="{{ pagination.hrefs[ loop.index0 ] }}">{{ pageEntry }}</a>
    {% endif %}
  {%- endfor %}
</p>
