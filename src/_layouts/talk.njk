---
layout: default
---

{#
Breadcrumb JSON-LD:
https://developers.google.com/search/docs/data-types/breadcrumbs
#}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "https://nicolas-hoizey.com/talks/{{ page.date | date("YYYY") }}/",
          "name": "{{ page.date | date(" YYYY ") }}"
        }
      }, {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": "https://nicolas-hoizey.com/talks/{{ page.date | date("YYYY/MM") }}/",
          "name": "{{ page.date | date(" MM ") }}"
        }
      }, {
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@id": "{{ pkg.homepage }}{{ page.url }}",
          "name": "{{ title }}"
        }
      }
    ]
  }
</script>

<article
    class="main talk clearfix h-entry"
    lang="{{ lang }}">
  <h1 id="post" class="p-name">{{ title }}</h1>

  {% set item = {
    data: {
      layout: 'talk',
      lang: lang,
      title: title,
      tags: tags,
      webmentions: webmentions,
      comments: comments
    },
    date: page.date,
    url: page.url
  } %}
  {% from "macros/meta.njk" import meta %}
  {{ meta(item) }}

  <div class="e-content">
    <div class="talk__header">
      <figure class="talk__cover">
        <img
          alt="screenshot of {{ title }}"
          width="300"
          height="200"
          src="{{ thumbUrl }}{{ link }}"
          class="screenshot"
          >
      </figure>
    </div>

    {{ content | safe }}
  </div>

  {% set articleUrl = page.url %}
  {% include "components/webmentions.njk" %}
</article>

<div class="e-content">
  <footer>
    <ul class="meta">
      <li class="date meta__item meta__date">
        <svg class="icon"><use xlink:href="#symbol-calendar" /></svg>
        <time class="dt-published" datetime="{{ talk.attributes.presented_on | attributeDate }}">
          {{ talk.attributes.presented_on | date("Do MMMM YYYY") }}
        </time>
      </li>
      <li class="date meta__item card__location">
        {% if talk.attributes.event.url %}
          <a href="{{ talk.attributes.event.url }}">{{ talk.attributes.event.name }}</a>
        {% else %}
          {{ talk.attributes.event.name }}
        {% endif %}
      </li>
    </ul>
  </footer>
  <img src="{{ talk.attributes.image.src }}" alt="Cover slide from the talk “{{ talk.attributes.title }}”" class="onethird right" width="{{ talk.attributes.image.width }}" height="{{ talk.attributes.image.height }}" />
  {{ talk.attributes.blurb | safe }}
  <p>See slides and additional content on Notist: <a href="{{ talk.links.self }}">{{ talk.attributes.title }}</a>
  </p>
</div>
