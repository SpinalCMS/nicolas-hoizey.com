---
layout: default
---

{#
Breadcrumb JSON-LD:
https://developers.google.com/search/docs/data-types/breadcrumbs
#}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "https://nicolas-hoizey.com/{{ layout }}s/{{ date | date("YYYY") }}/",
          "name": "{{ date | date(" YYYY ") }}"
        }
      }, {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": "https://nicolas-hoizey.com/{{ layout }}s/{{ date | date("YYYY/MM") }}/",
          "name": "{{ date | date(" MM ") }}"
        }
      }, {
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@id": "{{ pkg.homepage }}{{ page.url }}",
          "name": "{{ title }}"
        }
      }
    ]
  }
</script>

{% if layout == 'note' %}
  {% set cssFilename = "page-note.css" %}
  {% include "add-css.njk" %}

  {% set previousNote = collections.notes | getPreviousCollectionItem(page) %}
  {% set nextNote = collections.notes | getNextCollectionItem(page) %}

  <ul class="prevnext">
    <li class="prevnext__prev">
      {% if previousNote %}
        <a href="{{ previousNote.url }}" class="button">&lt; newer</a>
      {% endif %}
    </li>
    <li class="prevnext__next">
      {% if nextNote %}
        <a href="{{ nextNote.url }}" class="button">older &gt;</a>
      {% endif %}
    </li>
  </ul>
{% endif %}

<article
    class="page h-entry"
    lang="{{ lang }}">

  {% if layout == 'link' and authors %}
    <p class="page__surtitle">{{ authors.html | safe }}</p>
  {% endif %}

  {% if layout == 'note' %}
    <h1 class="page__title p-name">Note from {{ page.date | formattedDate }}</h1>
  {% else %}
    <h1 class="page__title p-name">{{ title | orphans | safe }}</h1>
  {% endif %}

  {% set item = {
    data: {
      layout: layout,
      lang: lang,
      title: title,
      tags: tags
    },
    date: date,
    url: page.url
  } %}
  {% from "macros/meta.njk" import meta %}
  <aside class="page__meta">
    {{ meta(item) }}
  </aside>

  <div class="page__body e-content">
    {% if layout == 'link' %}
      <img
        alt="Screenshot of “{{ title }}”"
        width="1200"
        height="800"
        src="https://image.thum.io/get/width/1200/crop/800/noanimate/{{ link }}"
        class="page__illustration u-photo"
        crossorigin="anonymous"
        >
    {% endif %}
    {% if layout == 'link' %}
      <p class="link__url">
        <a href="{{ link }}" class="u-bookmark-of">{{ link }}</a>
      </p>
    {% endif %}
    {% if layout == 'note' %}
      {{ content | noteToHtml | safe }}
    {% else %}
      {{ content | safe }}
    {% endif %}
  </div>

  {% if layout in ['article', 'link', 'note'] %}
    <div id="webmentions" class="lazy"></div>
  {% else %}
    {% set articleUrl = page.url %}
    {% include "components/webmentions.njk" %}
  {% endif %}
</article>

