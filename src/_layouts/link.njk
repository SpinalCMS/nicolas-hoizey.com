---
layout: default
---

{#
Breadcrumb JSON-LD:
https://developers.google.com/search/docs/data-types/breadcrumbs
#}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@id": "https://nicolas-hoizey.com/links/{{ page.date | date("YYYY") }}/",
          "name": "{{ page.date | date(" YYYY ") }}"
        }
      }, {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@id": "https://nicolas-hoizey.com/links/{{ page.date | date("YYYY/MM") }}/",
          "name": "{{ page.date | date(" MM ") }}"
        }
      }, {
        "@type": "ListItem",
        "position": 3,
        "item": {
          "@id": "{{ pkg.homepage }}{{ page.url }}",
          "name": "{{ title }}"
        }
      }
    ]
  }
</script>

<article
    class="main page link clearfix h-entry"
    lang="{{ lang }}">

  {% if authors %}
    <p class="page__surtitle">
      {% for author in authors %}
        <span class="p-author h-card">
          {% if author.twitter %}
            <img class="u-photo largeavatar" src="https://res.cloudinary.com/nho/image/twitter_name/{{ author.twitter }}" alt="{{ author.name }} avatar" loading="lazy" width="48" height="48" />
            <b class="p-name">{{ author.name }}</b>
            (<svg><use xlink:href="#symbol-twitter" /></svg> @<a href="https://twitter.com/{{ author.twitter }}">{{ author.twitter }}</a>)
          {% else %}
            <b class="p-name">{{ author.name }}</b>
          {% endif %}
        </span>
      {% endfor %}
      wrote
    </p>
  {% endif %}

  <h1 id="post" class="page__title p-name">{{ title }}</h1>

  {% set item = {
    data: {
      layout: 'note',
      lang: lang,
      title: title,
      tags: tags,
      webmentions: webmentions,
      comments: comments
    },
    date: page.date,
    url: page.url
  } %}
  {% from "macros/meta.njk" import meta %}
  {{ meta(item) }}

  <div class="e-content">
    <img
      alt="screenshot of “{{ title }}”"
      width="1200"
      height="800"
      src="https://image.thum.io/get/width/1200/crop/800/noanimate/{{ link }}"
      class="page__illustration"
      >
    <p class="link__url">
      <a href="{{ link }}" class="u-bookmark-of">{{ link }}</a>
    </p>
    <div class="page__text">
      {{ content | safe }}
    </div>
  </div>

  {% set articleUrl = page.url %}
  {% include "components/webmentions.njk" %}
</article>
