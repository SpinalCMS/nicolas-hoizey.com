<!DOCTYPE html>
<html lang="en">

  {% include "head.njk" %}

  <body itemscope itemtype="https://schema.org/{% if "about/" in page.inputPath %}aboutpage{% else %}webpage{% endif %}" class="{%- include "current-type.njk" -%}">

    {% include "components/svg-sprite.njk" %}

    <a class="sr-only" href="#main">Jump to main content</a>

    <div id="notifications"></div>

    <header id="header" role="banner">
      <div
        class="wrap">
        <!-- {{ page.url }} -->
        {% if page.url == "/" or page.url == "/index.html" %}
          <h1 class="site_title h-card" rel="me">Nicolas Hoizey</h1>
        {% else %}
          <p class="site_title">
            <a class="h-card" href="/" rel="me" title="Homepage">Nicolas Hoizey</a>
          </p>
        {% endif %}
        {% include "components/search-form.njk" %}
      </div>
    </header>

    {% include "components/navigation.njk" %}

    {% if page.url == "/" or page.url == "/index.html" %}
      {% include "components/intro.njk" %}
    {% endif %}

    <main id="main" role="main">
      <div class="wrap">
        {{ content | safe }}
      </div>
    </main>
    <div class="search">
      <div class="wrap">
        <div class="results" id="search_results"></div>
      </div>
    </div>

    {% include "components/footer.njk" %}

    {# TODO: make critical inline #}
    <script src="{{ '/js/main.min.js' | url }}" defer></script>

    <script type="module" src="/sw-window.mjs"></script>

    {#
    {% if layout == 'article' or layout == 'link' %}
      <script src="{{ '/js/webmentions.min.js' | url }}" defer></script>
    {% endif %}
    #}
  </body>

</html>
