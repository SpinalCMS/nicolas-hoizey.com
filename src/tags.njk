{% set cssFilename = "tagscloud.css" %}
{% include "add-css.njk" %}

{% from "macros/tagsCloud.njk" import tagsCloud %}

<p class="lead">These are the tags used in contents from this site.</p>

<section id="dynamic" style="display: none">
  <p id="current"></p>
  <input type="range" id="mintags" size="4" min="1" max="11" step="1" value="5" style="width: 100%" />
</section>

{{ tagsCloud(collections.tags) }}

{% if build.env == 'production' %}
  <script defer type="module" src="/js/{{ hashes_tagscloud['assets/js/tagscloud.js']}}"></script>
{% else %}
  <script defer type="module" src="/js/tagscloud-es.js"></script>
{% endif %}
