<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Nicolas Hoizey",
  "url": "https://nicolas-hoizey.com/",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://nicolas-hoizey.com/search.html?q={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "sameAs": [
    "https://twitter.com/nhoizey",
    "https://www.flickr.com/photos/nicolas-hoizey/",
    "https://www.facebook.com/nhoizey.photo/",
    "https://instagram.com/nhoizey",
    "https://github.com/nhoizey"
  ]
}
</script>

{% from "macros/articleCard.njk" import articleCard %}

<h2>Latest articles</h2>
<ul class="list">
  {% for article in collections.articles | reverse | limit(3) %}
    <li class="list__item list__item--large">
      <div class="card card--article h-entry">
        {{ articleCard(article.data.title, article.url, article.data.lang, article.date, article.data.tags, article.templateContent ) }}
      </div>
    </li>
  {% endfor %}
</ul>

{% from "macros/linkCard.njk" import linkCard %}

<h2>Latest links</h2>
<ul class="list">
  {% for link in collections.links | reverse | limit(6) %}
    <li class="list__item">
      <div class="card card--link h-entry">
        {{ linkCard(link.data.title, link.url, link.data.link, link.data.authors, link.date, link.data.tags) }}
      </div>
    </li>
  {% endfor %}
</ul>

